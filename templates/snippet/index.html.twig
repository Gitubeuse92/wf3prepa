{% extends 'base.html.twig' %}

{% block title %}Snippet index{% endblock %}

{% block body %}
    <h1>Snippet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>EditedAt</th>
                <th>IsPublished</th>
                <th>IsPublic</th>
                <th>IsPRO</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for snippet in snippets %}
            <tr>
                <td>{{ snippet.id }}</td>
                <td>{{ snippet.title }}</td>
                <td>{{ snippet.content }}</td>
                <td>{{ snippet.CreatedAt ? snippet.CreatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ snippet.EditedAt ? snippet.EditedAt|date('Y-m-d') : '' }}</td>
                <td>{{ snippet.IsPublished ? 'Yes' : 'No' }}</td>
                <td>{{ snippet.IsPublic ? 'Yes' : 'No' }}</td>
                <td>{{ snippet.IsPRO ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_snippet_show', {'id': snippet.id}) }}">show</a>
                    <a href="{{ path('app_snippet_edit', {'id': snippet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_snippet_new') }}">Create new</a>
{% endblock %}
