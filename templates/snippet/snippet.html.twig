{% extends 'base.html.twig' %}

{% block title %}Snippet{% endblock %}

{% block body %}
    <main class="container">
        <section class="row gap-1">
            <div class="mb-3">
                <div class="d-flex align-items-center mb-5">
                    <div class="me-3">
                        <img src="./assets/img/favicon.png" class="rounded-pill border d-none d-md-block d-lg-block"
                            width="80">
                    </div>
                    <div>
                        <h3 class="h2 mt-3">Codeshare <span
                                class="rounded-pill bg-primary text-light h6 px-2">PRO</span></h3>
                        <p class="fs-6 text-muted text-uppercase">Fullstack Dev</p>
                    </div>
                </div> <!-- User -->
                <div class="d-flex align-items-center justify-content-between border-bottom mb-3">
                    <h2>Titre</h2>
                    <div>
                        <p>
                            Publié le 01/01/2023
                        </p>
                    </div>
                </div> <!-- Titre -->
                <div class="border-bottom mb-5">
                    <pre>
                        <code>
                            &lt;p&gt;Sample text here...&lt;/p&gt;
                            &lt;p&gt;And another line of sample text here...&lt;/p&gt;
                            &lt;div class="alert alert-success" role="alert"&gt;
                                A simple success alert—check it out!
                            &lt;/div&gt;
                        </code>
                    </pre>
                </div> <!-- La note -->
                <div>
                    <h6 class="mb-3">Télécharger le code au format PDF</h6>
                    <a href="#" class="btn btn-primary"><i class="fas fa-file-pdf"></i> Télécharger</a>
                </div> <!-- Télécharger -->
        </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
{% endblock %}
